  "brand": {
    "primary": {
      "cssVar": "--color-mm-primary",
      "value": "#337def",
      "description": "Primary brand blue used for CTAs and key highlights."
    },
    "secondary": {
      "cssVar": "--color-mm-secondary",
      "value": "#fcc729",
      "description": "Secondary accent yellow used for supporting highlights."
    },
    "dark": {
      "cssVar": "--color-mm-dark",
