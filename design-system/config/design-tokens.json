{
  "$schema": "./design-tokens.schema.json",
  "meta": {
    "name": "MM Design System Tokens",
    "version": "2.0.0",
    "updated": "2024-11-20",
    "description": "Canonical definition for the MM design system tokens. All generated CSS/TS artifacts are derived from this file."
